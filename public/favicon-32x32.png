  <path d="M16 22 C14 22, 12 20, 12 18" stroke="#34d399" stroke-width="1.5" fill="none" opacity="0.8"/>
  
  <!-- Central antenna -->
  <circle cx="16" cy="16" r="1.5" fill="#fbbf24"/>
  
  <!-- Connection points -->
  <circle cx="16" cy="11" r="1" fill="#34d399" opacity="0.6"/>
  <circle cx="16" cy="21" r="1" fill="#34d399" opacity="0.6"/>
