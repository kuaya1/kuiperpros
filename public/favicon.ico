<svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Professional gradient background -->
    <radialGradient id="bgGradient" cx="50%" cy="30%" r="80%">
      <stop offset="0%" style="stop-color:#4f46e5;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#3730a3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e1b4b;stop-opacity:1" />
    </radialGradient>
    
    <!-- Satellite body gradient -->
    <linearGradient id="satelliteGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#f59e0b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1" />
    </linearGradient>
    
    <!-- Solar panel gradient -->
    <linearGradient id="solarGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#60a5fa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
    </linearGradient>
    
    <!-- Signal gradient -->
    <linearGradient id="signalGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#34d399;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#10b981;stop-opacity:0.6" />
    </linearGradient>
  </defs>
  
  <!-- Background circle -->
  <circle cx="16" cy="16" r="16" fill="url(#bgGradient)" />
  
  <!-- Subtle outer ring for depth -->
  <circle cx="16" cy="16" r="15" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/>
  
  <!-- Main satellite body -->
  <rect x="11" y="13.5" width="10" height="5" rx="1.5" fill="url(#satelliteGradient)" />
  
  <!-- Solar panels with more detail -->
  <rect x="6.5" y="12.5" width="4" height="7" rx="0.5" fill="url(#solarGradient)" />
  <rect x="21.5" y="12.5" width="4" height="7" rx="0.5" fill="url(#solarGradient)" />
  
  <!-- Solar panel details -->
  <rect x="7" y="13" width="3" height="2" rx="0.2" fill="rgba(255,255,255,0.2)" />
  <rect x="7" y="15.5" width="3" height="2" rx="0.2" fill="rgba(255,255,255,0.2)" />
  <rect x="22" y="13" width="3" height="2" rx="0.2" fill="rgba(255,255,255,0.2)" />
  <rect x="22" y="15.5" width="3" height="2" rx="0.2" fill="rgba(255,255,255,0.2)" />
  
  <!-- Signal waves - animated effect -->
  <g stroke="url(#signalGradient)" stroke-width="1.2" fill="none">
    <!-- Top waves -->
    <path d="M16 9.5 Q19 9.5, 21 12" opacity="0.9"/>
    <path d="M16 9.5 Q13 9.5, 11 12" opacity="0.9"/>
    <path d="M16 8 Q20.5 8, 23 12.5" opacity="0.6"/>
    <path d="M16 8 Q11.5 8, 9 12.5" opacity="0.6"/>
    
    <!-- Bottom waves -->
    <path d="M16 22.5 Q19 22.5, 21 20" opacity="0.9"/>
    <path d="M16 22.5 Q13 22.5, 11 20" opacity="0.9"/>
    <path d="M16 24 Q20.5 24, 23 19.5" opacity="0.6"/>
    <path d="M16 24 Q11.5 24, 9 19.5" opacity="0.6"/>
  </g>
  
  <!-- Central antenna/dish -->
  <circle cx="16" cy="16" r="2" fill="#fcd34d" stroke="#f59e0b" stroke-width="0.5"/>
  <circle cx="16" cy="16" r="1.2" fill="rgba(255,255,255,0.3)" />
  
  <!-- Signal origin points -->
  <circle cx="16" cy="10" r="1.2" fill="#34d399" opacity="0.8"/>
  <circle cx="16" cy="22" r="1.2" fill="#34d399" opacity="0.8"/>
  
  <!-- Professional "K" letter overlay (subtle) -->
  <text x="16" y="20" text-anchor="middle" font-family="Arial, sans-serif" font-size="6" font-weight="bold" fill="rgba(255,255,255,0.9)">K</text>
</svg>
